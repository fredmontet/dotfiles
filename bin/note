#!/bin/sh
# Just a quick tool to take a note
NOTE_PATH="/Volumes/GoogleDrive/My Drive/project/note"
EXT=".md"
TMP_NOTE_PATH="tmp$EXT"

NOW="$(date +'%d/%m/%Y')"
NOW_REVERSE="$(date +'%y%m%d')"

if [ ! -z "$1" ] && [ -z "$2" ] # If only one arg e.g. note topic
  then
    FILENAME="$NOTE_PATH/$1$EXT"
    exec vim "$FILENAME"
    exit 1
elif [ ! -z "$1" ] && [ ! -z "$2" ] # If two args e.g. note topic <path>
   then
    FILENAME="$2/$1$EXT"
	  exec vim "$FILENAME"
    exit 1
else # If no arg
  FILENAME="$NOTE_PATH/tmp$EXT"
  #touch $FILENAME
  #echo "# note $NOW ==================================================================" >> $FILENAME
	exec vim "$FILENAME"
	exit 1
fi